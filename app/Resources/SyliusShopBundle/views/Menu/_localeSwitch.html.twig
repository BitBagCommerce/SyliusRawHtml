{% if locales|length > 1 %}
    <div id="sylius-locale-selector">
        {{ active|sylius_locale_name }}
        {% for code in locales %}
            {% if code is not same as(active) %}
                <a href="{{ path('sylius_shop_switch_locale', {'code': code}) }}">
                    {{ code|sylius_locale_name }}
                </a>
            {% endif %}
        {% endfor %}
    </div>
{% endif %}
