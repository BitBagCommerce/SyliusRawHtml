{{ sonata_block_render_event('sylius.shop.product.index.before_vertical_menu', {'taxon': taxon}) }}

    {{ taxon.name }}
    {% if taxon.parent is not empty and not taxon.parent.isRoot() %}
        <a href="{{ path('sylius_shop_product_index', {'slug': taxon.parent.slug, '_locale': taxon.parent.translation.locale}) }}">
            {{ 'sylius.ui.go_level_up'|trans }}
        </a>
    {% endif %}
    {% for child in taxon.children %}
        <a href="{{ path('sylius_shop_product_index', {'slug': child.slug, '_locale': child.translation.locale}) }}">{{ child.name }}</a>
    {% endfor %}

{{ sonata_block_render_event('sylius.shop.product.index.after_vertical_menu', {'taxon': taxon}) }}
