{% macro default(text) %}
    {{ text|trans }}
{% endmacro %}

{% macro status(status) %}
    {% import _self as labels %}

    {% if status %}
        {{ labels.enabled() }}
    {% else %}
        {{ labels.disabled() }}
    {% endif %}
{% endmacro %}

{% macro enabled() %}
    {{ 'sylius.ui.enabled'|trans }}
{% endmacro %}

{% macro disabled() %}
    {{ 'sylius.ui.disabled'|trans }}
{% endmacro %}

{% macro yesNo(value) %}
    {% import _self as labels %}

    {% if value %}
        {{ labels.yes() }}
    {% else %}
        {{ labels.no() }}
    {% endif %}
{% endmacro %}

{% macro yes() %}
    {{ 'sylius.ui.yes_label'|trans }}
{% endmacro %}

{% macro no() %}
    {{ 'sylius.ui.no_label'|trans }}
{% endmacro %}
