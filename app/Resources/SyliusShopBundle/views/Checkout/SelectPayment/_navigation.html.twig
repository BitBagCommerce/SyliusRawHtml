{% set enabled = order.payments|length %}

{% if sylius_is_shipping_required(order) %}
    <a href="{{ path('sylius_shop_checkout_select_shipping') }}">{{ 'sylius.ui.change_shipping_method'|trans }}</a>
{% else %}
    <a href="{{ path('sylius_shop_checkout_address') }}">{{ 'sylius.ui.change_address'|trans }}</a>
{% endif %}
<button type="submit" id="next-step" class="{% if not enabled %}disabled{% endif %}">
    {{ 'sylius.ui.next'|trans }}
</button>