{% import "@SyliusShop/Common/Macro/money.html.twig" as money %}

<table id="sylius-checkout-subtotal">
    <thead>
    <tr>
        <th>{{ 'sylius.ui.item'|trans }}</th>
        <th>{{ 'sylius.ui.quantity'|trans }}</th>
        <th>{{ 'sylius.ui.subtotal'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for item in order.items %}
        <tr>
            <td>{{ item.getVariant.product.name }}</td>
            <td>
                {{ item.quantity }}
            </td>
            <td id="sylius-item-{{ item.variant.product.slug }}-subtotal">{{ money.convertAndFormat(item.subtotal) }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
